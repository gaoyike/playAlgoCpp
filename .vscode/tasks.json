{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "shell",
			"label": "buildCurrentFile",
			"command": "D:\\Ming\\mingw64\\bin\\g++.exe",
			"args": [
				"-g",
				"${workspaceFolder}/${relativeFileDirname}/${fileBasenameNoExtension}.cpp",
				"-o",
				"${workspaceFolder}/${relativeFileDirname}/${fileBasenameNoExtension}.exe",
			],
			"options": {
				"cwd": "D:\\Ming\\mingw64\\bin"
			},
			"problemMatcher": [
				"$gcc"
			],
			
			"group": "build",
			"promptOnClose": false,
			"presentation": {
				"reveal": "silent",
				"clear": true
			  }
		},
		{
			"type": "shell",
			"label": "runCurrentFile",
			"command": "${workspaceFolder}/${relativeFileDirname}/${fileBasenameNoExtension}.exe",
			"promptOnClose": false,
			"presentation": {
				"clear": true,
				"showReuseMessage": false
			  }
		}
	]
}