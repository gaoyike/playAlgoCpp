{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "shell",
			"label": "buildCurrentFile",
			"command": "D:\\Ming\\bin\\g++.exe",
			"args": [
				"-g",
				"${workspaceFolder}/${relativeFileDirname}/test_${relativeFileDirname}.cpp",
				"-o",
				"${workspaceFolder}/${relativeFileDirname}/${relativeFileDirname}.exe",
			],
			"options": {
				"cwd": "D:\\Ming\\bin\\"
			},
			"problemMatcher": [
				"$gcc"
			],
			
			"group": "build",
			"promptOnClose": false
		},
		{
			"type": "shell",
			"label": "runCurrentFile",
			"command": "${workspaceFolder}/${relativeFileDirname}/${relativeFileDirname}.exe",
			"promptOnClose": false
		}
	]
}